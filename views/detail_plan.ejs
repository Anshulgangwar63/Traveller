<% include partials/navbar %>

<div class="flight_back">
        <h1 class="flight_header">Full Plan</h1>
    </div>
<div class="timeline">
        <div class="upper_part">
            <div class="text_card">
                <p class="date_box"><%= plan.book_date[8] %><%= plan.book_date[9]%> Nov 19</p>
                <div class="card_top">
                <img src="<%= plan.flight_icon %>" class="plane" alt="">
                 <h2 class="airline_name"><%= plan.airline%></h2>
                 
             </div>
             <div class="toboard">
                 <div class="source_2"><%= plan.source %><p class="time_trav"><%= plan.source_time %></p></div>
                 <div class="arrow_2"><i class="fa fa-long-arrow-right fa-2x" aria-hidden="true"></i></div>
                 <div class="dest_2"><%= plan.destination %> <p class="time_trav"><%= plan.dest_time %></p></div>
             </div>
             </div>
 <!--            <div class="hori"></div>-->
             <div class="blank"></div>
        </div>
         <div class="below_part">
             <div class="blank_space"></div>
 <!--            <div class="hori second_line"></div>-->
             <div class="photo_card">
                 <div class="picture_space" style="background-image: url(<%= plan.hotel_icon %>);">
                     <p class="second_date_box">10 Nov 19</p>
                 </div>
                 <div class="hotel_info">
                     <div class="hot_name"><%= plan.hotel %> <p class="hotel_city"><%= plan.destination %></p></div>
                     <div class="hotel_star"><%= plan.star %><i class="fa fa-star" aria-hidden="true"></i></div>
                 </div>
                 <div class="datess">
                     <div class="checki">CheckIn <p class="act">18-11-19</p></div>
                     <div class="checko">CheckOut <p class="act">21-11-19</p></div>
                 </div>
                 <div class="hot_add">
                     Address: <p><%= plan.hotel_add %></p> 
                 </div>
             </div>
         </div>
     </div>
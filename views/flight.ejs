<% include partials/navbar  %>

<div class="flight_back">
    <h1 class="flight_header">Flights</h1>
</div>
<% flight.forEach(function(flight){ %>
    <div class="flight_box">
        <div class="small_box air">
            <div class="logo">
                <img src="<%= flight.icon %>" alt="logo">
            </div>
            <div class="airline"><%= flight.airline %></div>
        </div>
        <div class="small_box place">
            <div class="stop">
                <p><span class="time"><%= flight.source_time %></span><%=flight.source%></p>
            </div>
            <div class="stop"><i class="fa fa-long-arrow-right fa-2x" aria-hidden="true"></i></div>
            <div class="stop">
                <p><span class="time"><%=flight.dest_time%></span><%=flight.destination%></p>
            </div>
        </div>
        <div class="small_box">
            <p class="price">&#8377; <%=flight.price%></p>
        </div>
        <div class="small_box detail">
            <form action="/flight" method="post">
                <input type="text" name="airline" value="<%= flight.airline %>">
                <input type="text" name="source" value="<%= flight.source %>">
                <input type="text" name="destination" value="<%= flight.destination %>">
                <input type="text" name="source_time" value="<%= flight.source_time %>">
                <input type="text" name="dest_time" value="<%= flight.dest_time %>">
                <input type="text" name="book_date" value="<%= flight.book_date %>">
                <input type="text" name="flight_icon" value="<%= flight.icon %>">
                <input type="submit" value="Book"  class="submit_btn"style="display: block;">
            </form>
        </div>
    </div>
    
<% }); %>